import os
import time
import shutil
folder=os.getcwd()
print ("файл в папке:", folder)
file=open('1.txt','rb')
contents=file.read()
print(contents)
file.close()
input("Нажмите enter, чтобы продолжить")
print("Тот же файл,", file.name, "но в удобоваримом виде")
file=open('1.txt','r',encoding='ANSI')
contents=file.read()
print(contents)
file.close()
input("Нажмите enter чтобы продолжить")
print("А теперь добавим новый текст в открытый файл")
nt=input("введите новый текст: ")
file=open('1.txt','a+')
file.write(nt+'\n')
file.close()
input("Нажмите enter чтобы продолжить")
print("Сейчас содержимое файла такое:")
file=open('1.txt','r',encoding="ANSI")
contents=file.read()
print(contents)
file.close()
input("Нажмите enter чтобы продолжить")
input("создадим новую папку")
time=time.time()
time=str(time)
print("Создадим папку с именем",time[13:18])
os.mkdir(time[13:18])
print("И создадим файл с именем", time)
shutil.copy('1.txt',time)
input("Нажмите enter чтобы закончить")